---
// VideoEmbed.astro
const { videoId, title } = Astro.props;
---

<div class="video-wrapper">
<iframe
  width="560"
  height="480"
  src={`https://www.youtube.com/embed/${videoId}`}
  title={title}
  frameborder="0"
  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
  allowfullscreen
></iframe>
</div>

<style>
.video-wrapper {
  position: relative;
  padding-bottom: 56.25%; /* 16:9 aspect ratio */
  height: 0;
  overflow: hidden;
  max-width: 100%;
  background: #000; /* Optional, to show the black background before loading the video */
}

.video-wrapper iframe {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border: 0;
}
</style>